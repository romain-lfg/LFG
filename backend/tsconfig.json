{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".vercel/output/functions",
    "rootDir": "."
  },
  "include": ["api/**/*", "src/**/*"],
  "exclude": ["node_modules", "api/lib/nillion/**/*.js"]
}
